<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rtc_entrance_main"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/aq1"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/entrance_ic_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/a22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="center_horizontal"
            android:text="颐年养老"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/aq1"
        android:id="@+id/ll_room_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical">

        <TextView
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="手机号" />

        <EditText
            android:id="@+id/et_input_room_id"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:maxLength="11"
            android:textColorHint="#aaaaaa"
            android:hint="小程序预约手机号"
            android:paddingStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/rtc_edit_bg"
            android:layout_marginTop="6dp"
            android:inputType="number" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/aq3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_room_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="密码" />

        <EditText
            android:id="@+id/et_input_username"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="14sp"
            android:textColorHint="#aaaaaa"
            android:paddingStart="10dp"
            android:hint="默认密码：123456"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:background="@drawable/rtc_edit_bg"/>

    </LinearLayout>


    <com.qmuiteam.qmui.layout.QMUIButton
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="登 录"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/aq3"
        android:layout_centerHorizontal="true"
        android:id="@+id/bt_enter_room"
        android:background="@color/colorPrimary"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:layout_height="44dp"/>


</RelativeLayout>