<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--第一层阴影-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#01000000" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <!--第二层-->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#02000000"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!--第三层-->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#03000000"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!--第三层-->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#04000000"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!--第三层-->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffffff"/>
            <corners android:radius="6dp" />
        </shape>
    </item>

</layer-list>

